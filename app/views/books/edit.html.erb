<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

<h4>title</h4>
  <%= f.text_field :title %>

<h4>body</h4>
  <div><%= f.text_area :body %></div>
  <div><%= f.submit 'Update Book' %></div>
<% end %>